{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // Node.js typically uses CommonJS for .js files
    "rootDir": "./api",
    "outDir": "./dist/api",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
